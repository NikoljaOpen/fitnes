<Window x:Class="Fitnes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fitnes"
        mc:Ignorable="d"
        Title="MainWindow" Height="340.616" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Логин" Grid.Row="1" Width="300" FontSize="16" VerticalAlignment="Bottom"/>
        <TextBox x:Name="LoginBox" Grid.Row="2" Height="33" Width="300" FontSize="16" MaxLength="15"/>
        <Label Content="Пароль" Grid.Row="3" Width="300" FontSize="16" VerticalAlignment="Bottom"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="4" Height="33" Width="300" FontSize="16" MaxLength="30"/>
        <Button Grid.Row="5" HorizontalAlignment="Center" Content="Авторизоваться" Height="33" Width="200" FontSize="16" Click="Button_Click"/>
        

    </Grid>
</Window>
